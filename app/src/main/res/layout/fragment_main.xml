<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="viewModel"
      type="com.hsy.simplebitcoinwallet.main.MainViewModel"/>

  </data>

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
      android:id="@+id/balance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@{viewModel.balance}"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="123.43 BTC"/>

    <TextView
      android:id="@+id/syncProgress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@{String.format(@string/main_sync_progress_format, viewModel.syncProgress)}"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/balance"
      tools:text="sync: 1/100"/>

  </android.support.constraint.ConstraintLayout>

</layout>